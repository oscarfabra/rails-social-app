<% provide(:title, "Contact") %>
<h1>Contact</h1>

<!-- Shows the contact form -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>
      Please leave your message in this form and you will receive an answer soon.
    </p>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <div class="field">
        <%= f.label :message %>
        <%= f.text_area :message, placeholder: "Your message must be at least 20 characters long..." %>
      </div>

      <%= f.submit "Send", class: "btn btn-danger btn-submit" %><br/>
    <% end %>
  </div>
</div>