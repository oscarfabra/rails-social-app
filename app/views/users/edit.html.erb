<% provide(:title, 'Edit user') %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- Update form -->
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>      
      <%= f.submit "Save changes", class: "btn btn-danger btn-submit" %>
    <% end %>
    <!-- Gravatar -->
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails">Change</a>
    </div>
  </div>
</div>