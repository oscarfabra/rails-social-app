<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<!-- Shows the user sign up form -->
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'fields', f: f %>      
      <%= f.submit "Create my account", class: "btn btn-danger" %>
    <% end %>
  </div>
</div>